@model Product

<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">Title : @Model.Title</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">Author : @Model.Author</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">ISBN : @Model.ISBN</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                 Price:
                                <span class="text-dark text-opacity-50">
                                    @Model.Price Ft
                                </span>
                            </h6>
                        </div>
                        
                           
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Model.Description</p>
                        </div>
                        
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
