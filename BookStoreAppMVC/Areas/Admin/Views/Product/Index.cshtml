@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <div class="row pb-3">
            <div class="col-6">
             
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
            </div>

        </div>

    </div>

    <table class="table tabletable-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>  
                <th>ImageUrl</th>
                <th>Description</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Price</th>
                <th>CategoryId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>
                        <img src="@obj.ImageUrl" alt="Product Image" style="max-width: 200px; height: auto;" />
                    </td>
                    <td>
                        @obj.Description
                    </td>
                    <td>@obj.ISBN</td>
                    <td>@obj.Author</td>
                    <td>@obj.Price</td>
                    <td>@obj.CategoryId</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id " class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>


   